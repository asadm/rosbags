{
  "name": "rosbags",
  "version": "0.0.1",
  "description": "Minimal ROS bag (v1.2) writer ported from rosbags python implementation.",
  "main": "writer.js",
  "type": "commonjs",
  "author": "Asad Memon",
  "license": "MIT",
  "exports": {
    ".": "./writer.js"
  },
  "scripts": {
    "test": "node tests/run.js",
    "build": "esbuild writer.js --bundle --platform=node --format=cjs --outfile=dist/rosbags.js",
    "prepublishOnly": "npm run build && npm test",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "rosbag": "^4.0.1"
  }
}
